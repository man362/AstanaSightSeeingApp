<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_language_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidapp.astanasightseeing.astanasightseeing.LanguagePage"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|clip_horizontal"
        android:weightSum="1">

        <ImageView
            app:srcCompat="@drawable/kazakh_language"
            android:id="@+id/iv_kazakh_lang"
            android:layout_width="match_parent"
            android:layout_weight="0.04"
            android:layout_height="32dp" />

        <TextView
            android:text="Kazakh"
            android:layout_width="match_parent"
            android:id="@+id/tvKazakhLang"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.04"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:srcCompat="@drawable/russian_flag"
            android:id="@+id/iv_russian_lang"
            android:layout_marginTop="20dp"
            android:layout_weight="0.04" />

        <TextView
            android:text="Russian"
            android:layout_width="match_parent"
            android:id="@+id/tvRussianLang"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_height="32dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            app:srcCompat="@drawable/english_flag"
            android:id="@+id/iv_english_lang"
            android:layout_marginTop="20dp"
            android:layout_weight="0.04" />

        <TextView
            android:text="English"
            android:layout_width="match_parent"
            android:id="@+id/tvEnglishLang"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_height="37dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>
